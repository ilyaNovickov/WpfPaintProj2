<UserControl x:Class="WpfPaintProj2.DrawingClasses.DrawingField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfPaintProj2.DrawingClasses"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer x:Name="scrollViewer" x:FieldModifier="private" HorizontalScrollBarVisibility="Auto" >
        <Canvas x:Name="mainCanvas" x:FieldModifier="public" 
                Background="DarkGray" Width="0" Height="0" ClipToBounds="True">
            <!--<extra:Round Width="30" Height="50" Fill="Red" Stroke="Aqua"/>-->
        </Canvas>
    </ScrollViewer>
</UserControl>
